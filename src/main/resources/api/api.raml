#%RAML 1.0
title: assessment-sapi-raml
description: This Raml is for assessment sapi API.
version: 1.0.0
protocols:
  - HTTPS
  - HTTP

uses: 
  common-lib: /exchange_modules/4c3d015c-c1be-48f1-83b4-c724393940b4/common-fragment/1.0.0/common-fragment.raml

types:
  get-assessment-response : !include /exchange_modules/4c3d015c-c1be-48f1-83b4-c724393940b4/common-fragment/1.0.0/dataType/get-assessment-response-dataType.raml
  post-accessment-request: !include /exchange_modules/4c3d015c-c1be-48f1-83b4-c724393940b4/common-fragment/1.0.0/dataType/post-assessment-request-dataType.raml
  post-accessment-response: !include /exchange_modules/4c3d015c-c1be-48f1-83b4-c724393940b4/common-fragment/1.0.0/dataType/post-assessment-response-dataType.raml
traits:
  common-headers : !include /exchange_modules/4c3d015c-c1be-48f1-83b4-c724393940b4/common-fragment/1.0.0/trait/common-header-trait.raml
  common-error-response : !include /exchange_modules/4c3d015c-c1be-48f1-83b4-c724393940b4/common-fragment/1.0.0/trait/common-error-response-trait.raml

/assessments:
  description: This resource is used for assessment to check fund eligibality and submit fund eliilibity assessment. 
  get:
    description: This API will retrieve set of questions answer from salesforce system.
    is:
      - common-headers
      - common-error-response
    responses:
      200:
        body:
          application/json:
            type: get-assessment-response
            example: !include /example/get-assessment-response-example.json          
  post:
    description: This API will submit assessment report to salesforce system.
    is:
      - common-headers
      - common-error-response
    body:
      application/json:
        type: post-accessment-request
        example: !include /example/post-assessment-request-example.json 
    responses:
      201:
        body:
          application/json:
            type: post-accessment-response
            example: !include /example/post-assessment-response-example.json